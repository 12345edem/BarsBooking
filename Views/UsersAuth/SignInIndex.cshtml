@model  User

@{
    ViewData["Title"] = "Sign In";
}

<h2>Enter your account info</h2>
<h2>
    <form  asp-controller="UsersAuth" asp-action="SignIn" method="post">
        <div>
            <label>Login</label>
            <input type="text" name="login" asp-for="Login">
        </div>
        <div>
            <label>Password</label>
            <input type="password" name="password" asp-for="Password">
        </div>
        <div>
        <input type="submit" value="SignIn">
        </div>
    </form>
    <a asp-controller="UsersAuth" asp-action="SignUpIndex">If you didn't sign up already go here</a>
</h2>